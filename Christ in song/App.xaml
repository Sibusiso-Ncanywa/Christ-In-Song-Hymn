<Application x:Class="Christ_in_song.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Christ_in_song">

       <Application.Resources>
              <ResourceDictionary>
                     <ResourceDictionary.MergedDictionaries>
                            <!-- The order is important! -->
                            <ResourceDictionary Source="Styles/Colors.xaml" />
                            <ResourceDictionary Source="Styles/Fonts.xaml" />
                            <ResourceDictionary Source="Styles/myImages.xaml" />
                            <ResourceDictionary Source="Styles/Texts.xaml" />
                            <ResourceDictionary Source="Styles/Buttons.xaml" />
                            <ResourceDictionary Source="Styles/Scrollbar.xaml" />
                            <ResourceDictionary Source="Styles/Windows.xaml" />
                     </ResourceDictionary.MergedDictionaries>
              </ResourceDictionary>
       </Application.Resources>

</Application>
